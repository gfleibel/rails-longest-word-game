<div class="container">
  <h1 class="mb-3 mt-5">New game</h1>
  <p>Score: <%=session[:score]%></p>
  <div class="d-flex gap-2">
    <% @letters.each do |letter|%>
    <p class="badge text-bg-primary p-4"><%= letter %></p>
    <% end %>
  </div>

  <p>What is the longest word you can find?</p>
  <form class="form-inline" action="score" method="post" data-turbo="false">
    <div class="d-flex gap-2">
      <input class="form-control w-50" type="text" name="word">
      <input class="btn btn-primary" type="submit" value="Play">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
